<% if @product.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

    <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @product, :html => {class: 'form-horizontal'} do |f| %>
  <div class="field form-group">
    <%= f.label(:name, class: "col-sm-4 control-label") %>
    <div class="col-sm-8"><%= f.text_field(:name, class: "form-control") %></div>
    <%= f.label(:stock_level, class: "col-sm-4 control-label") %>
    <div class="col-sm-8"><%= f.text_field(:stock_level, class: "form-control") %></div>
    <%= f.label(:price, class: "col-sm-4 control-label") %>
    <div class="col-sm-8"><%= f.text_field(:price, class: "form-control") %></div>
    <%= f.label(:brand, class: "col-sm-4 control-label") %>
    <div class="col-sm-8"><%= f.text_field(:brand, class: "form-control") %></div>
    <%= f.label(:material, class: "col-sm-4 control-label") %>
    <div class="col-sm-8"><%= f.text_field(:material, class: "form-control") %></div>
    <%= f.label(:weight, class: "col-sm-4 control-label") %>
    <div class="col-sm-8"><%= f.text_field(:weight, class: "form-control") %></div>
  </div>

  <%= f.submit(class: "btn btn-primary") %>
  <%= button_to 'Cancel', @product, :class => "btn btn-default", :method => "get" %>
<% end %>
<%= form_for @product, :remote => true, :html => {class: 'form-horizontal'} do |f| %>
  <div class="form-group">
    <%= f.label(:name, class: "col-sm-2 col-sm-offset-2 control-label") %>
    <div class="col-sm-6"><%= f.text_field(:name, class: "form-control", required: true) %></div>
    <div class="col-sm-2"></div>
  </div>
  <div class="form-group">
    <%= f.label(:description, class: "col-sm-2 col-sm-offset-2 control-label") %>
    <div class="col-sm-6"><%= f.text_area(:description, class: "form-control", required: true) %></div>
    <div class="col-sm-2"></div>
  </div>
  <div class="form-group">
    <%= f.label(:stock_level, class: "col-sm-2 col-sm-offset-2 control-label") %>
    <div class="col-sm-6"><%= f.number_field(:stock_level, in: 0..100000, step: 1, class: "form-control", required: true) %></div>
    <div class="col-sm-2"></div>
  </div>
  <div class="form-group">
    <%= f.label(:price, class: "col-sm-2 col-sm-offset-2 control-label") %>
    <div class="col-sm-6"><%= f.number_field(:price, in: 0..100000, step: 0.01, class: "form-control", required: true) %></div>
    <div class="col-sm-2"></div>
  </div>
  <div class="form-group">
    <%= f.label(:brand, class: "col-sm-2 col-sm-offset-2 control-label") %>
    <div class="col-sm-6"><%= f.text_field(:brand, class: "form-control", required: true) %></div>
    <div class="col-sm-2"></div>
  </div>
  <div class="form-group">
    <%= f.label(:material, class: "col-sm-2 col-sm-offset-2 control-label") %>
    <div class="col-sm-6"><%= f.text_field(:material, class: "form-control", required: true) %></div>
    <div class="col-sm-2"></div>
  </div>
  <div class="form-group">
    <%= f.label(:weight, class: "col-sm-2 col-sm-offset-2 control-label") %>
    <div class="col-sm-6"><%= f.number_field(:weight, in: 0..100000, step: 0.01, class: "form-control", required: true) %></div>
    <div class="col-sm-2"></div>
  </div>

  <div class="row">
    <div class="col-sm-10">
      <%= f.submit(class: "btn btn-primary pull-right") %>
    </div>
    <div class="col-sm-2"></div>
  </div>
<% end %>
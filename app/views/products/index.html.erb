    <h4>Filter by brand:</h4>
    <% counter = 0 %>
    <% @allBrands.each do |brand| %>
      <% #makes sure that the labels and checkboxes vertically align %> 
      <label for="b<%= counter %>_"><%= brand %></label>
      <input id="b<%= counter %>_" type="checkbox" onclick="checkboxClick(this, 'brand=')">
      <% counter += 1 %>
    <% end %>
    
    <h4>Filter by material:</h4>
    <% counter = 0 %>
    <% @allMaterials.each do |material| %>
      <label for="m<%= counter %>_"><%= material %></label>
      <input id="m<%= counter %>_" type="checkbox" onclick="checkboxClick(this, 'material=')">
      <% counter += 1 %>
    <% end %>

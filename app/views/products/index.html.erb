<h1>All products</h1>

<div class="content">
  <div class="sidebar">
    <script>
      <% #This should be moved to its own js. file or converted into coffeescript %> 
      function checkboxClick(checkbox, type) {
        if (checkbox.checked) {
          <% #replace this with a function that insert the value into the string, if there are no occurrences of it %> 
          window.location.search = type + checkbox.id;
        } else {
          <% #replace this with a function that removes the occurrences checkbox.id in the param string %>
          window.location.search = '';
        }
      }
    </script>
    <h4>Filter by brand:</h4>
    <% counter = 0 %>
    <% @allBrands.each do |brand| %>
      <% #makes sure that the labels and checkboxes vertically align %> 
      <label for="_<%= counter %>"><%= brand %></label>
      <input id="_<%= counter %>" type="checkbox" onclick="checkboxClick(this, 'brand=')">
      <% counter += 1 %>
    <% end %>
    <h4>Filter by material:</h4>
    <% counter = 0 %>
    <% @allMaterials.each do |material| %>
      <label for="_<%= counter %>"><%= material %></label>
      <input id="_<%= counter %>" type="checkbox" onclick="checkboxClick(this, 'material=')">
      <% counter += 1 %>
    <% end %>
    
  <% #Create javascript that checks the checkboxes after the values in the params string %> 
  </div>
  <div class="row">
  <% if @products.length > 0 %>
    <% @products.each do |product| %>
      <div class="col-sm-4">
        <div class="panel panel-default">
          <div class="panel-heading product-panel-heading"><img src="/assets/placeholder_<%= rand(1..4) %>.svg" alt="" class="product-img"></div>
          <div class="panel-body">
            <div class="caption">
              <h4 class="pull-right"><%= product.price %></h4>
              <h4><a href="#"><%= product.name %></a></h4>
              <p><%= product.description %></p>
            </div>
          </div>
          <div class="panel-footer text-right">
            <% if user_signed_in? %>
              <% if !Cart.product_in_cart?(current_user.id, product.id) %>
                <%= link_to 'Add to Cart', { controller: 'cart_items', action: 'add_to_cart', user_id: current_user.id, product_id: product.id }, class: 'btn btn-primary', method: :post, remote: true %>
              <% else %>
                <%= link_to 'Item already in cart', {}, class: 'btn btn-default', disabled: 'disabled' %>
              <% end %>
            <% else %>
              <%= link_to 'Please sign in to buy this item', {}, class: 'btn btn-default', disabled: 'disabled' %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <h2 class="text-muted text-center margin-top-large">There are no products in the shop.</h2>
    <p class="text-muted text-center">If you're a seller, create some products now.</p>
  <% end %>
</div>
</div>

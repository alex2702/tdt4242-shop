<nobr>
  <%= form_for cart_item, :remote => true, :html => {class: 'form-inline'} do |f| %>
    <%= f.number_field(:amount, min: 1, max: cart_item.product.stock_level, step: 1, value: cart_item.amount, class: "form-control form-field-small amount-input") %>
    <%= f.submit('Save') %>
  <% end %>
</nobr>